<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ApplicationActivity"
    tools:showIn="@layout/activity_application">

    <TextView
        android:id="@+id/time"
        android:layout_width="117dp"
        android:layout_height="27dp"
        android:layout_alignEnd="@+id/address"
        android:layout_alignStart="@+id/people"
        android:layout_below="@+id/people"
        android:layout_marginTop="17dp"
        android:text="EventStartTime" />

    <TextView
        android:id="@+id/people"
        android:layout_width="117dp"
        android:layout_height="27dp"
        android:layout_alignStart="@+id/address"
        android:layout_below="@+id/price"
        android:layout_marginTop="12dp"
        android:text="MaxGuest" />

    <TextView
        android:id="@+id/price"
        android:layout_width="117dp"
        android:layout_height="27dp"
        android:layout_alignStart="@+id/catagory"
        android:layout_below="@+id/catagory"
        android:layout_marginTop="13dp"
        android:text="Price" />

    <TextView
        android:id="@+id/name"
        android:layout_width="117dp"
        android:layout_height="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/description"
        android:layout_marginTop="31dp"
        android:text="Food Party Event" />

    <TextView
        android:id="@+id/catagory"
        android:layout_width="117dp"
        android:layout_height="27dp"
        android:layout_alignStart="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="67dp"
        android:text="Category" />

    <TextView
        android:id="@+id/description"
        android:layout_width="181dp"
        android:layout_height="64dp"
        android:layout_alignStart="@+id/address"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="226dp"
        android:text="Description" />

    <TextView
        android:id="@+id/address"
        android:layout_width="181dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="142dp"
        android:text="Address" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        android:text="Apply" />
</RelativeLayout>
